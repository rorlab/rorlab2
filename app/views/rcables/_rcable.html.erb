<div class="card mr-3 mb-3 mt-3 d-inline-block" style="width: 18rem;">
  <%= image_tag 'chatting-card-image.png', class: "card-img-top", alt:"Card image cap" %>
  <div class="card-body">
    <h5 class="card-title font-weight-bolder"><%= rcable.name %><br><small><i><%= rcable.user.email %></i></small></h5>
    <p class="card-text"><%= rcable.description || 'No Description' %></p>
    <%= link_to '참여하기', rcable, class: 'btn btn-primary' %>
    <div class='d-inline ml-2'>
      <%= link_to 'Edit', edit_rcable_path(rcable) %> |
      <%= link_to 'Destroy', rcable, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>