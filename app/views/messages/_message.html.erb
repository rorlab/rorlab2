<% if message.persisted? %>
  <div id="message_<%= message.id %>" class='message bg-light bg-secondary p-1 m-1'>
    <strong><%= message.user.name %></strong> : 
    <div class='message-timestamp'><%= message.timestamp %></div>
    <%= sanitize markdown(message.content) %>
    <% if message.image.attached? %>
      <div class='alert alert-dark'>
        <% if message.image.content_type.include?('image') %>
            <%= link_to image_tag(url_for(message.image.variant(resize_to_limit: [200, 200])), class: 'rounded'), url_for(message.image) %><br>
            <%= link_to message.image.filename, rails_blob_path(message.image, disposition: "attachment") %>
        <% else %>
          <%= link_to message.image.filename, rails_blob_path(message.image, disposition: "attachment") %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
