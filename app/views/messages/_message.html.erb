<% if message.persisted? %>
  <div id="message_<%= message.id%>" class='message bg-light bg-secondary p-1 m-1'>
    <strong><%= message.user.name %></strong> : <%= message.content %>
  <div style="display:inline-block;float:right;color:#aaa;font-size:.8rem;padding-top:.2rem;"><i><%= message.created_at %></i></div>
  </div>
<% end %>
